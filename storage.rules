rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /statements/{statementId}/{imagePath=**} {
      allow read;
      allow write: if request.auth.uid == firestore.get(
      /databases/(default)/documents/statements/$(statementId)).data.creatorId;
    }

    // Rules for anchor icons - simplified for development
    match /anchor_icons/{statementId}/{imagePath=**} {
      allow read;
      // Allow write if user is authenticated
      // In production, you may want to check if user is admin of the statement
      allow write: if request.auth != null;
    }
  }
}
