{
	"preset": "ts-jest",
	"testEnvironment": "jsdom",
	"setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
	"modulePathIgnorePatterns": [
		"<rootDir>/functions/local-packages/",
		"<rootDir>/functions/package/"
	],
	"roots": ["<rootDir>/src", "<rootDir>/__mocks__", "<rootDir>/packages"],
	"moduleNameMapper": {
		"^valibot$": "<rootDir>/__mocks__/valibot.ts",
		"^clsx$": "<rootDir>/__mocks__/clsx.ts",
		"\\.svg\\?react$": "<rootDir>/src/__mocks__/svgMock.tsx",
		"\\.(svg|png|jpg|jpeg|gif)$": "<rootDir>/src/__mocks__/fileMock.ts",
		"\\.(css|less|scss|sass)$": "identity-obj-proxy",
		"^@/(.*)$": "<rootDir>/src/$1",
		"^@freedi/shared-types$": "<rootDir>/packages/shared-types/src/index.ts",
		"^@freedi/shared-types/(.*)$": "<rootDir>/packages/shared-types/src/$1"
	},
	"transformIgnorePatterns": [
		"node_modules/(?!(valibot|clsx)/)"
	],
	"transform": {
		"^.+\\.(ts|tsx)$": ["<rootDir>/jest-transformer.cjs", {
			"isolatedModules": true,
			"tsconfig": {
				"esModuleInterop": true,
				"jsx": "react"
			}
		}],
		"packages/.+\\.(ts|tsx)$": ["<rootDir>/jest-transformer.cjs", {
			"isolatedModules": true,
			"tsconfig": {
				"esModuleInterop": true,
				"jsx": "react"
			}
		}]
	},
	"testMatch": [
		"<rootDir>/src/**/__tests__/**/*.(ts|tsx|js)",
		"<rootDir>/src/**/?(*.)(spec|test).(ts|tsx|js)"
	],
	"collectCoverageFrom": [
		"src/**/*.{ts,tsx}",
		"!src/**/*.d.ts",
		"!src/main.tsx",
		"!src/vite-env.d.ts"
	],
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}