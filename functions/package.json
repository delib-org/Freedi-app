{
	"name": "functions",
	"version": "1.0.0",
	"scripts": {
		"clean": "rm -rf node_modules package-lock.json && git rm -r --cache . && git reset && npm install && npm run build",
		"lint": "eslint --ext .js,.ts . --ignore-pattern 'lib/' --ignore-pattern 'coverage/'",
		"prebuild": "rm -f freedi-shared-types-*.tgz && (cd ../packages/shared-types && npm run build && npm pack && mv freedi-shared-types-*.tgz ../../functions/) && rm -f package-lock.json && npm install",
		"build": "tsc",
		"dev": "tsc --watch",
		"serve": "npm run build && firebase emulators:start --only functions",
		"shell": "npm run build && firebase functions:shell",
		"start": "npm run shell",
		"deploy": "tsc && firebase deploy --only functions",
		"logs": "firebase functions:log",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"engines": {
		"node": "20"
	},
	"main": "lib/functions/src/index.js",
	"dependencies": {
		"@freedi/shared-types": "file:./freedi-shared-types-1.0.0.tgz",
		"@google/generative-ai": "^0.15.0",
		"@sendgrid/mail": "^8.1.5",
		"@types/nodemailer": "^7.0.1",
		"delib-npm": "^5.6.76",
		"dotenv": "^16.4.5",
		"firebase-admin": "^12.6.0",
		"firebase-functions": "^6.3.2",
		"googleapis": "^168.0.0",
		"nodemailer": "^7.0.6",
		"typescript": "^5.6.3",
		"valibot": "^1.0.0-rc.1"
	},
	"devDependencies": {
		"@firebase/testing": "^0.20.11",
		"@types/jest": "^29.5.14",
		"@types/parse5": "^6.0.3",
		"firebase-functions-test": "^3.4.1",
		"jest": "^29.7.0",
		"ts-jest": "^29.4.2"
	},
	"bundledDependencies": [
		"@freedi/shared-types"
	],
	"private": true
}
